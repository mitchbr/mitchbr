<div id="div_nav_menu">
  <ul id="nav_menu">
    <li><a href="/" class="btn">Home</a>
    <li><a href="/weather-data" class="btn">Snow Weather Data</a>
    <li><a href="/surf-data" class="btn">Surf Conditions Data</a>
    <li><a href="/location-page" class="btn">Location Finder</a>
  <ul>
